<%- include('../partials/header', { page: 'customers', pageGroup: 'clients' }) %>

<div class="container mt-5">
  <h1 class="fw-bold text-primary mb-4"><i class="bi bi-upload"></i> Importer des Contacts</h1>

  <form action="/customers/import" method="POST" enctype="multipart/form-data" class="p-4 bg-light rounded shadow-sm">
    <div class="mb-3">
      <label class="form-label">Fichier CSV ou Excel</label>
      <input type="file" name="file" accept=".csv,.xlsx" required class="form-control">
    </div>
    <button type="submit" class="btn btn-success">
      <i class="bi bi-cloud-arrow-up-fill"></i> Importer
    </button>
    <a href="/customers" class="btn btn-secondary ms-2">Annuler</a>
  </form>
</div>

<%- include('../partials/footer') %>
