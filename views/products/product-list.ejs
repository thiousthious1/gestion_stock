<%- include('../partials/header', { page: 'products', pageGroup: 'products' }) %>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.bootstrap5.min.css">

<div class="container mt-5 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-box-seam"></i> Liste des Produits
        </h1>
        <% if (hasRight('add_products', 'add')) { %>
          <a href="/products/add" class="btn btn-success">
            <i class="bi bi-plus-circle-fill"></i> Ajouter un produit
          </a>
        <% } %>

    </div>
    <%- include('../partials/breadcrumb', { parent: 'Catalogue', current: 'Liste des Produits' }) %>

    <div class="table-responsive shadow-sm">
        <table class="table table-bordered align-middle" id="productsTable">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Cat√©gorie</th>
                    <th>Quantit√©</th>
                    <th>Prix Achat</th>
                    <th>Prix Vente</th>
                    <th>Seuil</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
              <% produits.forEach(p => { %>
                <tr>
                  <td><%= p.id %></td>
                  <td><%= p.nom %></td>
                  <td><%= p.category_name %></td>
                  <td><%= p.quantite %></td>
                  <td><%= Number(p.prix_achat || 0).toFixed(2) %> FCFA</td>
                  <td><%= Number(p.prix_vente || 0).toFixed(2) %> FCFA</td>
                  <td><%= p.stock_alert_level %></td>
                  <td>
                    <div class="dropdown">
                      <button class="btn btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots-vertical"></i>
                      </button>
                      <ul class="dropdown-menu">
                        <% if (hasRight('edit_products', 'edit')) { %>
                          <li><a class="dropdown-item" href="/products/edit/<%= p.id %>">‚úèÔ∏è Modifier</a></li>
                        <% } %>

                        <% if (hasRight('delete_products', 'delete')) { %>
                          <li><a class="dropdown-item text-danger" href="/products/delete/<%= p.id %>" onclick="return confirm('Supprimer ce produit ?')">üóëÔ∏è Supprimer</a></li>
                        <% } %>

                        <% if (hasRight('add_purchases', 'add')) { %>
                          <li><a class="dropdown-item text-success" href="/purchases/add?product=<%= p.id %>">‚ûï Approvisionner</a></li>
                        <% } %>

                      </ul>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>

        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<!-- Boutons export -->
<script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.bootstrap5.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<!--<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>-->

<script>
  $(document).ready(function () {
    $('#productsTable').DataTable({
      language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json' },
      responsive: true,
      dom: 'Bfrtip',
      buttons: [
        {
            extend: 'copy',
            text: '<i class="bi bi-clipboard"></i> Copier',
            className: 'btn btn-secondary',
            exportOptions: {
                  columns: ':not(:first-child):not(:last-child)' // On exclut le "+" et la colonne Action
              }
        },
        {
            extend: 'excel',
            text: '<i class="bi bi-file-earmark-excel"></i> Excel',
            className: 'btn btn-success',
            exportOptions: {
                  columns: ':not(:first-child):not(:last-child)' // On exclut le "+" et la colonne Action
              }
        },
        {
            extend: 'csv',
            text: '<i class="bi bi-filetype-csv"></i> CSV',
            className: 'btn btn-info',
            exportOptions: {
                  columns: ':not(:first-child):not(:last-child)' // On exclut le "+" et la colonne Action
              }
        },
        {
            extend: 'pdf',
            text: '<i class="bi bi-file-earmark-pdf"></i> PDF',
            className: 'btn btn-danger',
            exportOptions: {
                  columns: ':not(:first-child):not(:last-child)' // On exclut le "+" et la colonne Action
              }
        },
        {
            extend: 'print',
            text: '<i class="bi bi-printer"></i> Imprimer',
            className: 'btn btn-primary',
            exportOptions: {
                  columns: ':not(:first-child):not(:last-child)' // On exclut le "+" et la colonne Action
              }
        }
    ]

    });
  });
</script>

<style>
  body {
    font-family: 'Palatino Linotype', 'Book Antiqua', Palatino, serif;
}
  .fade-in {
    animation: fadeIn 0.5s ease-in;
  }

  /* Menu hover Stockifly style */
  .dropdown-hover {
    position: relative;
    display: inline-block;
  }

  .dropdown-hover .dropdown-menu {
    display: block;
    opacity: 0;
    visibility: hidden;
    position: absolute;
    top: 0;
    right: 100%;
    margin-right: 5px;
    min-width: 200px;
    z-index: 1000;
    border: 1px solid #dee2e6;
    border-radius: 0.5rem;
    background-color: #fff;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
    padding: 0;
    transform: translateX(-110px); /* petit d√©calage vers la gauche au d√©part */
  }

  .dropdown-hover:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateX(0);
  }

  .dropdown-menu li {
    list-style: none;
  }

  .dropdown-menu .dropdown-item {
    display: block;
    padding: 0.5rem 1rem;
    color: #212529;
    text-decoration: none;
  }

  .dropdown-menu .dropdown-item:hover {
    background-color: #f8f9fa;
  }

  table.dataTable td {
    white-space: nowrap;
    overflow: visible;
}

  table.dataTable td:last-child {
    width: 20px;
}
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<% if (successMessage) { %>
  <script>
    Swal.fire({
      toast: true,
      position: 'top-end',
      icon: 'success',
      title: '<%= successMessage %>',
      showConfirmButton: false,
      timer: 3000,
      timerProgressBar: true
    });
  </script>
<% } %>


