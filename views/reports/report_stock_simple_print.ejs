<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Rapport de stock - Impression</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @media print { .no-print { display: none !important; } }
        .logo { max-height: 80px; }
    </style>
</head>
<body class="p-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <img src="/images/logo_happy.jpg" alt="Logo" class="logo">
        <h2 class="fw-bold text-primary">Rapport de stock</h2>
    </div>

    <div class="mb-4 no-print">
        <a href="/reports/stock" class="btn btn-secondary me-2">Retour</a>
        <button class="btn btn-success" onclick="window.print()">Imprimer</button>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Quantit√©</th>
                <th>Prix unitaire</th>
                <th>Valeur stock</th>
            </tr>
        </thead>
        <tbody>
            <% produits.forEach(p => { %>
                <tr>
                    <td><%= p.id %></td>
                    <td><%= p.nom %></td>
                    <td><%= p.quantite %></td>
                    <td><%= (p.prix_vente || 0).toLocaleString('fr-FR', {minimumFractionDigits: 2}) %> FCFA</td>
                    <td><%= (p.valeur_stock || 0).toLocaleString('fr-FR', {minimumFractionDigits: 2}) %> FCFA</td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</body>
</html>
